{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.1",
  "parameters": {
    "moduleCreateFirewallsMultiCollections": {
      "type": "object"
    },
    
    "customTages": {
      "type": "object"
    },
    "suffixes" : {
      "type": "object"
    }
  },
  "variables": {
      "defaultLocation": "[resourceGroup().location]"
  },
  "resources": [
    {
      "apiVersion": "2018-11-01",
      "type": "Microsoft.Network/azureFirewalls",
      
      "comments": "Module to create a FW",
      "name": "[concat(parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].fwName,parameters('suffixes').fwSuffix)]",
      "tags": "[parameters('customTages')]",
      "location": "[if(equals(parameters('moduleCreateFirewallsMultiCollections').location, json('null')), variables('defaultLocation'), parameters('moduleCreateFirewallsMultiCollections').location)]",
      "dependsOn": [
      ],
      "properties": {
        
        "ipConfigurations": [
          {
            "name": "[concat(parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].ipconfName)]",
            "properties" : {
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets',concat(parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].vnetName,parameters('suffixes').vnetSuffix),concat(parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].subnetName,parameters('suffixes').subnetSuffix))]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',concat(parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].pipName,parameters('suffixes').publicIPSuffix))]"
              }
            }
          }
        ],      
        
        "copy" : [
            {
                "name": "applicationRuleCollections",
                "count" :  "[length(parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].applicationRuleCollections)]",
                "input" : { 
                
                    "name": "[parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].applicationRuleCollections[copyIndex('applicationRuleCollections')].name]",
                    "properties": {
                            
                        "priority": "[parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].applicationRuleCollections[copyIndex('applicationRuleCollections')].priority]",
                        "action": {"type": "[parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].applicationRuleCollections[copyIndex('applicationRuleCollections')].action]"},
                        "rules": [
                            {
                                "name": "[parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].applicationRuleCollections[copyIndex('applicationRuleCollections')].rules[0].name]",
                                "protocols": [
                                    {
                                    "port": "[parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].applicationRuleCollections[copyIndex('applicationRuleCollections')].rules[0].port]", 
                                    "protocolType": "[parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].applicationRuleCollections[copyIndex('applicationRuleCollections')].rules[0].protocolType]"
                                    }
                                ],
                                "targetFqdns": [
                                    "[parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].applicationRuleCollections[copyIndex('applicationRuleCollections')].rules[0].targetUrl]"
                                ],
                                "sourceAddresses": [
                                    "[parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].applicationRuleCollections[copyIndex('applicationRuleCollections')].rules[0].sourceAddress]"
                                ]
                            }
                        ]
                    }
                }
            }
        ],
        "copy" : [
            {
                "name": "networkRuleCollections",
                "count" :  "[length(parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].networkRuleCollections)]",
                "input" : { 
                
                    "name": "[parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].networkRuleCollections[copyIndex('networkRuleCollections')].name]",
                    "properties": {
                            
                        "priority": "[parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].networkRuleCollections[copyIndex('networkRuleCollections')].priority]",
                        "action": {"type": "[parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].networkRuleCollections[copyIndex('networkRuleCollections')].action]"},
                        "rules": [
                            {
                                "name": "[parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].networkRuleCollections[copyIndex('networkRuleCollections')].rules[0].name]",
                                "protocols": [
                                    "[parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].networkRuleCollections[copyIndex('networkRuleCollections')].rules[0].protocols]"
                                ],
                                "destinationAddresses": [
                                    "[parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].networkRuleCollections[copyIndex('networkRuleCollections')].rules[0].destinationAddresses]"
                                ],
                                "destinationPorts": [
                                    "[parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].networkRuleCollections[copyIndex('networkRuleCollections')].rules[0].destinationPorts]"
                                ],
                                "sourceAddresses": [
                                    "[parameters('moduleCreateFirewallsMultiCollections').fireWalls[0].networkRuleCollections[copyIndex('networkRuleCollections')].rules[0].sourceAddress]"
                                ]
                            }
                        ]
                    }
                }
            }
        ]
      }
    }
  ],
  "outputs": {
  }
}
