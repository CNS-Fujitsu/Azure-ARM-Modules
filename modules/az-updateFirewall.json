{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.1",
  "parameters": {
    "moduleUpdateFirewalls": {
      "type": "object"
    },
    
    "customTages": {
      "type": "object"
    },
    "suffixes" : {
      "type": "object"
    }
  },
  "variables": {
      "defaultLocation": "[resourceGroup().location]"
  },
  "resources": [
    {
      "apiVersion": "2018-11-01",
      "type": "Microsoft.Network/azureFirewalls",
      "name": "[concat(parameters('moduleUpdateFirewalls').fwName,parameters('suffixes').fwSuffix)]",
      "location": "[if(equals(parameters('moduleUpdateFirewalls').location, json('null')), variables('defaultLocation'), parameters('moduleUpdateFirewalls').location)]",
      "dependsOn": [
      ],

      "properties": {
        "applicationRuleCollections": [
          { 
            "name": "[concat(parameters('moduleUpdateFirewalls').fwName,parameters('suffixes').fwSuffix,parameters('moduleUpdateFirewalls').applicationRuleCollections.name)]",
            "properties": {
              "priority": "[parameters('moduleUpdateFirewalls').applicationRuleCollections.priority]",
              "action": {"type": "[parameters('moduleUpdateFirewalls').applicationRuleCollections.action]"},
            
              "copy": [
                  {
                    "name": "rules",
                    "count": "[length(parameters('moduleUpdateFirewalls').applicationRuleCollections.rules)]",
                    "input" : { 
                      "name": "[parameters('moduleUpdateFirewalls').applicationRuleCollections.rules[copyIndex('rules')].name]",
                      "protocols": [
                          {
                            "port": "[parameters('moduleUpdateFirewalls').applicationRuleCollections.rules[copyIndex('rules')].port]", 
                            "protocolType": "[parameters('moduleUpdateFirewalls').applicationRuleCollections.rules[copyIndex('rules')].protocolType]"
                          }
                      ],
                      "targetFqdns": [
                        "[parameters('moduleUpdateFirewalls').applicationRuleCollections.rules[copyIndex('rules')].targetUrl]"
                      ],
                      "sourceAddresses": [
                        "[parameters('moduleUpdateFirewalls').applicationRuleCollections.rules[copyIndex('rules')].sourceAddress]"
                      ]
                    }
                  }
              ]
            }
          }
        ]
      }
    }
  ],
  "outputs": {
  }
}