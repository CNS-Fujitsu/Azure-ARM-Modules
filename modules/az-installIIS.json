{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
      "moduleInstallIIS": {
        "type": "object"
      },
      "modulesUrl": {
        "type": "string",
        "metadata": {
          "description": "URL for the DSC configuration module. NOTE: Can be a Github url(raw) to the zip file"
        }
      },
      "configurationFunction": {
        "type": "string",
        "defaultValue": "ContosoWebsite.ps1\\ContosoWebsite",
        "metadata": {
          "description": "DSC configuration function to call"
        }
      },
      "customTages": {
        "type": "object"
      },
      "suffixes" : {
        "type": "object"
      }
    },
    "variables": {
      "defaultLocation": "[resourceGroup().location]",
      "vmExtensionName": "dscExtension"
    },
    "resources": [

        {   
          "copy" : {
            "name": "IIS",
            "count": "[length(parameters('moduleInstallIIS').vms)]"
          },
          
          "type": "Microsoft.Compute/virtualMachines/extensions",
          "name": "[concat(parameters('moduleInstallIIS').vms[copyIndex('IIS')].name,'/', variables('vmExtensionName'))]",
          "apiVersion": "2015-05-01-preview",
          "location": "[if(equals(parameters('moduleCreateNetworkConnections').location, json('null')), variables('defaultLocation'), parameters('moduleCreateNetworkConnections').location)]",
          "properties": {
            "publisher": "Microsoft.Powershell",
            "type": "DSC",
            "typeHandlerVersion": "2.19",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "ModulesUrl": "[parameters('modulesUrl')]",
              "ConfigurationFunction": "[parameters('configurationFunction')]",
              "Properties": {
                "MachineName": "[parameters('moduleInstallIIS').vms[copyIndex('IIS')].name]"
              }
            },
              "protectedSettings": null
            }
        }
    ], 
    "outputs": {
    }
}
