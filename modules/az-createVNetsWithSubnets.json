{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
      "moduleCreateVNetsAndSubnets": {
        "type": "object"
      },
      
      "customTages": {
        "type": "object"
      },
      "suffixes" : {
        "type": "object"
      }
      
    },
    "variables": {
        "defaultLocation": "[resourceGroup().location]",
        "subs": {
            "copy": [
                {
                    "name": "nsgSubnets",
                    "count": "[length(parameters('moduleCreateVNetsAndSubnets').subnets)]",
                    "input": {
                        "networkSecurityGroup": {
                            "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('moduleCreateVNetsAndSubnets').subnets[copyIndex('nsgSubnets')].nsgName)]"
                            }      
                        }
                    }
            ]
        },
        "base": {
            "copy": [
                {
                    "name": "subnetsBase",
                    "count": "[length(parameters('moduleCreateVNetsAndSubnets').subnets)]",
                    "input": {
                        "name": "[parameters('moduleCreateVNetsAndSubnets').subnets[copyIndex('subnetsBase')].name]",
                        "properties": {
                            "addressPrefix": "[parameters('moduleCreateVNetsAndSubnets').subnets[copyIndex('subnetsBase')].addressPrefix]"
                        }
                    }
                }
            ]
        }

        
    },
    "resources": [

       
        {
            "copy" : {
                "name": "vNets",
                "count": "[length(parameters('moduleCreateVNetsAndSubnets').vNets)]"
            },
            "name": "[concat(parameters('moduleCreateVNetsAndSubnets').vNets[copyIndex('vNets')].vnetName,parameters('suffixes').vnetSuffix)]",
            "type": "Microsoft.Network/virtualNetworks",
            "comments": "Module to create a vNET with multiple subnets",
            "apiVersion": "2018-08-01",
            "tags": "[parameters('customTages')]",
            "location": "[if(equals(parameters('moduleCreateVNetsAndSubnets').location, json('null')), variables('defaultLocation'), parameters('moduleCreateVNetsAndSubnets').location)]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('moduleCreateVNetsAndSubnets').vNets[copyIndex('vNets')].vnetCIDR]"
                    ]
                },
                "copy" : [
                    {
                        "name": "subnets",
                        "count": "[length(parameters('moduleCreateVNetsAndSubnets').subnets)]",
                        "input": {
                            "name": "[parameters('moduleCreateVNetsAndSubnets').name]",
                            "properties": "[union(variables('base')[copyIndex('subnets')].properties, if(equals(variables('subs')[copyIndex('subnets')].networkSecurityGroup.id, 'skip'), variables('base')[copyIndex('subnets')].properties, variables('subs')[copyIndex('subnets')]))]"
                        }
                    }
                ]
            }
        } 
    ],

    "outputs": {
    }
}