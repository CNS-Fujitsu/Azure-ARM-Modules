{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
      "moduleCreateVNetsAndSubnets": {
        "type": "object"
      },
      
      "customTages": {
        "type": "object"
      },
      "suffixes" : {
        "type": "object"
      }
      
    },
    "variables": {
        "defaultLocation": "[resourceGroup().location]",
        "subs": {
            "copy": [
                {
                    "name": "nsgSubnets",
                    "count": "[length(parameters('moduleCreateVNetsAndSubnets').subnets)]",
                    "condition": "[not(equals(parameters('moduleCreateVNetsAndSubnets').subnets[copyIndex('nsgSubnets')].nsgName,'null'))]",
                    "input": {
                        "addressPrefix": "[parameters('moduleCreateVNetsAndSubnets').subnets[copyIndex('nsgSubnets')].addressPrefix]",
                        "networkSecurityGroup": {
                            "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('moduleCreateVNetsAndSubnets').subnets[copyIndex('nsgSubnets')].nsgName)]"
                            }      
                        }
                    }
            ]
        }

        
    },
    "resources": [
        {
            "condition": "[not(contains(variables('subs')[copyIndex()].networkSecurityGroup.id, 'skip'))]",
            "apiVersion": "2017-06-01",
            "name": "[if(contains(parameters('moduleCreateVNetsAndSubnets').subnets[copyIndex()], 'nsgName'), parameters('moduleCreateVNetsAndSubnets').subnets[copyIndex()], 'skip')]",
            "location": "[resourceGroup().location]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "copy": {
                "name": "nsg",
                "count": "[length(parameters('moduleCreateVNetsAndSubnets').subnets)]"
            },
            "properties": {
                "securityRules": []
            }
        },
       
        {
            "copy" : {
                "name": "vNets",
                "count": "[length(parameters('moduleCreateVNetsAndSubnets').vNets)]"
            },
            "name": "[concat(parameters('moduleCreateVNetsAndSubnets').vNets[copyIndex('vNets')].vnetName,parameters('suffixes').vnetSuffix)]",
            "type": "Microsoft.Network/virtualNetworks",
            "comments": "Module to create a vNET with multiple subnets",
            "apiVersion": "2018-08-01",
            "tags": "[parameters('customTages')]",
            "location": "[if(equals(parameters('moduleCreateVNetsAndSubnets').location, json('null')), variables('defaultLocation'), parameters('moduleCreateVNetsAndSubnets').location)]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('moduleCreateVNetsAndSubnets').vNets[copyIndex('vNets')].vnetCIDR]"
                    ]
                },
                "copy" : [
                    {
                        "name": "subnets",
                        "count": "[length(parameters('moduleCreateVNetsAndSubnets').subnets)]",
                        "input": {
                            "name": "[concat('subnet-', parameters('moduleCreateVNetsAndSubnets').name)]",
                            "properties": "[union(variables('subs')[copyIndex('subnets')].properties, variables('subs')[copyIndex('subnets')].properties, if(equals(variables('subs')[copyIndex('subnets')].networkSecurityGroup.id, 'skip'), variables('subs')[copyIndex('subnets')].properties, variables('subs')[copyIndex('subnets')]))]"
                        }
                    }
                ]
            }
        } 
    ],
    "outputs": {
    }
}