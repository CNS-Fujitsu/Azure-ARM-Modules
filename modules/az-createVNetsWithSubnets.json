{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
      "moduleCreateVNetsAndSubnets": {
        "type": "object"
      },
      
      "customTages": {
        "type": "object"
      },
      "suffixes" : {
        "type": "object"
      }
    },
    "variables": {
        "defaultLocation": "[resourceGroup().location]",
        "withnsg": {
                    "copy" : {
                        "name": "nsgSubnets",
                        "count": "[length(parameters('moduleCreateVNetsAndSubnets').subnets)]"
                    },
                    "apiVersion": "2018-10-01",
                    "type": "Microsoft.Network/virtualNetworks/subnets",
                    "location": "[if(equals(parameters('moduleCreateVNetsAndSubnets').location, json('null')), variables('defaultLocation'), parameters('moduleCreateVNetsAndSubnets').location)]",
                    "name": "[concat(parameters('moduleCreateVNetsAndSubnets').subnets[copyIndex('nsgSubnets')].vnetName,parameters('suffixes').vnetSuffix,'/', parameters('moduleCreateVNetsAndSubnets').subnets[copyIndex('nsgSubnets')].name,parameters('suffixes').subnetSuffix)]",
                    "condition" : "[not(equals(parameters('moduleCreateVNetsAndSubnets').subnets[copyIndex('nsgSubnets')].nsgName,json('null')))]",
                    "dependsOn": [
                        "[concat(parameters('moduleCreateVNetsAndSubnets').subnets[copyIndex('nsgSubnets')].vnetName,parameters('suffixes').vnetSuffix)]"
                    ],
                    "properties": {
                        "addressPrefix": "[parameters('moduleCreateVNetsAndSubnets').subnets[copyIndex('nsgSubnets')].addressPrefix]",
                        "networkSecurityGroup": {
                            "id": "[resourceId('Microsoft.Network/networkSecurityGroups',concat(parameters('moduleCreateVNetsAndSubnets').subnets[copyIndex('nsgSubnets')].nsgName,parameters('suffixes').nsgSuffix))]"
                        }
                    
                    }
                
                }
                
            
    },
    "resources": [
        {
            "copy" : {
                "name": "vNets",
                "count": "[length(parameters('moduleCreateVNetsAndSubnets').vNets)]"
            },
            "name": "[concat(parameters('moduleCreateVNetsAndSubnets').vNets[copyIndex('vNets')].vnetName,parameters('suffixes').vnetSuffix)]",
            "type": "Microsoft.Network/virtualNetworks",
            "comments": "Module to create a vNET with multiple subnets",
            "apiVersion": "2018-08-01",
            "tags": "[parameters('customTages')]",
            "location": "[if(equals(parameters('moduleCreateVNetsAndSubnets').location, json('null')), variables('defaultLocation'), parameters('moduleCreateVNetsAndSubnets').location)]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('moduleCreateVNetsAndSubnets').vNets[copyIndex('vNets')].vnetCIDR]"
                    ]
                }
            }
        },
        {
            "[variables('withnsg')]" : {}
        }
        
    ],
    "outputs": {
    }
}