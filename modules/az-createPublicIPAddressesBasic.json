{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
      "moduleCreatePublicIPAddresses": {
        "type": "object"
      },
      "customTages": {
        "type": "object"
      },
      "suffixes" : {
        "type": "object"
      }
    },
    "variables": {
      "defaultLocation": "[resourceGroup().location]"
    },
    "resources": [
      {
        "copy" : {
          "name": "publicIPAddresses",
          "count": "[length(parameters('moduleCreatePublicIPAddresses').pips)]"
        },
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "[concat(toLower(parameters('moduleCreatePublicIPAddresses').pips[copyIndex('publicIPAddresses')].pipName),parameters('suffixes').publicIPSuffix)]",
        "apiVersion": "2018-06-01",
        "condition" : "[not(equals(parameters('moduleCreatePublicIPAddresses').pips[copyIndex('publicIPAddresses')].zones,json('null')))]",
        "dependsOn": [
        ],
        "zones": [
          "[if(equals(parameters('moduleCreatePublicIPAddresses').pips[copyIndex('publicIPAddresses')].zones, json('null')), json('null'), parameters('moduleCreatePublicIPAddresses').pips[copyIndex('publicIPAddresses')].zones)]"
        ],
        "tags": "[parameters('customTages')]",
        "sku": {
          "name": "[parameters('moduleCreatePublicIPAddresses').pips[copyIndex('publicIPAddresses')].sku]"
        },
        "location": "[if(equals(parameters('moduleCreatePublicIPAddresses').location, json('null')), variables('defaultLocation'), parameters('moduleCreatePublicIPAddresses').location)]",
        "properties": {
          "publicIPAllocationMethod": "[parameters('moduleCreatePublicIPAddresses').pips[copyIndex('publicIPAddresses')].publicIPAllocationMethod]"
        }    
      }
    ], 
    "resources": [
      {
        "copy" : {
          "name": "publicIPAddresses",
          "count": "[length(parameters('moduleCreatePublicIPAddresses').pips)]"
        },
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "[concat(toLower(parameters('moduleCreatePublicIPAddresses').pips[copyIndex('publicIPAddresses')].pipName),parameters('suffixes').publicIPSuffix)]",
        "apiVersion": "2018-06-01",
        "condition" : "[equals(parameters('moduleCreatePublicIPAddresses').pips[copyIndex('publicIPAddresses')].zones,json('null'))]",
        "dependsOn": [
        ],
        "tags": "[parameters('customTages')]",
        "sku": {
          "name": "[parameters('moduleCreatePublicIPAddresses').pips[copyIndex('publicIPAddresses')].sku]"
        },
        "location": "[if(equals(parameters('moduleCreatePublicIPAddresses').location, json('null')), variables('defaultLocation'), parameters('moduleCreatePublicIPAddresses').location)]",
        "properties": {
          "publicIPAllocationMethod": "[parameters('moduleCreatePublicIPAddresses').pips[copyIndex('publicIPAddresses')].publicIPAllocationMethod]"
        }    
      }
    ], 
    "outputs": {
    }
}
