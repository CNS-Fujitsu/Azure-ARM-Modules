{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
      "moduleCreateFirewalls": {
        "type": "object"
      },
      
      "customTages": {
        "type": "object"
      },
      "suffixes" : {
        "type": "object"
      }
    },
    "variables": {
        "defaultLocation": "[resourceGroup().location]"
    },
    "resources": [
        {
            "copy" : {
                "name": "fws",
                "count": "[length(parameters('moduleCreateFirewalls').firewalls)]"
            },
            "apiVersion": "2018-06-01",
            "type": "Microsoft.Network/azureFirewalls",
            "comments": "Module to create a FW",
            "name": "[concat(parameters('moduleCreateFirewalls').fireWalls[copyIndex('fws')].fwName,parameters('suffixes').fwSuffix)]",
            "tags": "[parameters('customTages')]",
            "location": "[if(equals(parameters('moduleCreateFirewalls').location, json('null')), variables('defaultLocation'), parameters('moduleCreateFirewalls').location)]",
            "dependsOn": [
            ],
            "properties": {
                
                "applicationRuleCollections": [
                    {
                        "name": "[parameters('moduleCreateFirewalls').fireWalls[copyIndex('fws')].applicationRuleCollections[copyIndex('arc')].name]",
                        "properties": {
                            "priority":"[parameters('moduleCreateFirewalls').fireWalls[copyIndex('fws')].applicationRuleCollections[copyIndex('arc')].priority]",
                            "action": {"type": "[parameters('moduleCreateFirewalls').fireWalls[copyIndex('fws')].applicationRuleCollections[copyIndex('arc')].action]"},
                            "copy" : {
                                "name": "rules",
                                "count": "[length(parameters('moduleCreateFirewalls').firewalls[copyIndex('fws')].applicationRuleCollections[copyIndex('arc')].rules)]",
                                "input" : {
                                    "rules": [
                                        {
                                            "name": "[parameters('moduleCreateFirewalls').fireWalls[copyIndex('fws')].applicationRuleCollections[copyIndex('arc')].rules[copyIndex('rules')].name]",
                                            "protocols": [{"port": "[parameters('moduleCreateFirewalls').fireWalls[copyIndex('fws')].applicationRuleCollections[copyIndex('arc')].rules[copyIndex('rules')].port]", "protocolType": "[parameters('moduleCreateFirewalls').fireWalls[copyIndex('fws')].applicationRuleCollections[copyIndex('arc')].rules[copyIndex('rules')].protocolType]"}],
                                            "targetUrls": ["[parameters('moduleCreateFirewalls').fireWalls[copyIndex('fws')].applicationRuleCollections[copyIndex('arc')].rules[copyIndex('rules')].targetUrl]"],
                                            "sourceAddresses": ["[parameters('moduleCreateFirewalls').fireWalls[copyIndex('fws')].applicationRuleCollections[copyIndex('arc')].rules[copyIndex('rules')].sourceAddress]"]
                                        }
                                    ]
                                }
                            }
                        }
                    }
                ]
            }
                
        }
    ],
    "outputs": {
    }
}
